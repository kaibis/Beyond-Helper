{
    "name": "Beyond Helper",
    "version": "1.06",
    "manifest_version": 3,
    "description": "Creates a printable spell list for your character",
    "background": {
      "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Beyond Helper - Printable spell list for your DDB character",
        "default_icon": "green_duck.png"
      },
      "icons": {
        "48": "green_duck.png",
        "16": "green_duck.png"
      },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "permissions": ["sidePanel", "tabs", "activeTab", "scripting"],
    "host_permissions": [
                          "https://*/*",
                          "http://*/*"
                        ]
  }